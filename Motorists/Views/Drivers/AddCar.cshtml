@model Motorists.Models.Driver
@{
    ViewBag.Title = "AddCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Car</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("registrationNumber", "Enter car's registration number ", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBox("registrationNumber", "", new { @class = "form-control" })
            </div> 
        </div>

        <div class="form-group">
            <div class="btn-group col-md-offset-3 col-md-9">
                <input type="submit" value="Add" class="btn btn-primary" />
                @Html.ActionLink("To Cars", "Index", "Cars", new { area = "" }, new { @class = "btn btn-default", role = "button" })
                @Html.ActionLink("Back", "Details", new { id = Model.Id }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>


   
}